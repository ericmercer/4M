CC=gcc
CFLAGS=-g -Wall
INCS=-I. -Istructs/
CFILES=gem_driver.c gem_config.c gem_util.c

TARGET=gem_driver

ifneq (,$(findstring MINGW,$(shell uname)))
INCS+= -Iwin32/
CFILES+= gem_win32.c win32/ucontext.c
else
CFILES+= gem_posix.c
CFLAGS+= -D_GNU_SOURCE
ALLFILES+= racket
endif

all: racket $(TARGET) gemConfig
	@echo GEM driver program built successfully!

clean:
	rm -f $(TARGET)

gemConfig:
	@echo -e 'mode=SINGLE\ndebug=OFF\n#seed=35AE' > gemConfig
	@echo 'Created sample gemConfig file.'

$(TARGET): $(CFILES)
	$(CC) $(CFLAGS) $(INCS) $^ -o $@

racket: /usr/bin/racket

/usr/bin/racket:
	@echo Need /usr/bin/racket for this to work
	sudo ln -s `which racket` /usr/bin/racket

